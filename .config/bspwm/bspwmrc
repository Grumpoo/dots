#!/bin/sh

### SXHKD (serios for keybinds) ###
pgrep -x sxhkd > /dev/null || sxhkd &

### AUTOSTART ###
setxkbmap -model pc104 -layout lv,ru -variant ,phonetic_mac -option grp:shifts_toggle &
lxsession &
nm-applet &
pgrep -x xfce4-clipman > /dev/null || xfce4-clipman &
nitrogen --restore &
flameshot &
picom &
dunst &
emote &
# xautolock -corners "-000" -cornersize 40 -time 5 -locker screenlock &
mpd &
xrdb -merge ~/.Xresources &
xsetroot -cursor_name left_ptr &
$HOME/.config/polybar/launch.sh &
$HOME/.config/bspwm/masterlayout.sh &

### MONITORS ###
bspc monitor DP-0 -d 1 2 3 4 5 6 7 8 9
bspc monitor HDMI-0 -d 10 11 12

### MAIN ###
bspc config border_width               2
bspc config window_gap                 10
bspc config split_ratio                0.5

bspc config single_monocle             true
bspc config borderless_monocle         true
bspc config gapless_monocle            true
bspc config focus_by_distance          true
bspc config focus_follows_pointer      true
bspc config history_aware_focus        true
bspc config remove_disabled_monitors   true
bspc config merge_overlapping_monitors true
bspc config pointer_motion_interval    1ms

### COLOURING ###
bspc config focused_border_color "#888888"
bspc config normal_border_color  "#282828"
bspc config active_border_color  "#282828"

### RULES ###
bspc config external_rules_command  ~/.config/bspwm/external_rules.sh

# Main floating.
bspc rule -a pop-up state=floating
bspc rule -a bubble state=floating
bspc rule -a task_dialog state=floating
bspc rule -a Preferences state=floating
bspc rule -a dialog state=floating
bspc rule -a menu statefloating

# Custom rules.
bspc rule -a steam state=floating
bspc rule -a discord desktop='^3'
bspc rule -a OpenTabletDriver.UX state=floating
bspc rule -a Virt-manager state=floating
bspc rule -a zoom state=floating
bspc rule -a KeyOverlay state=floating
bspc rule -a flameshot state=floating
bspc rule -a kcalc state=floating
bspc rule -a "veadotube mini.x86_64" state=floating
bspc rule -a Anydesk state=floating
bspc rule -a zenity state=floating
