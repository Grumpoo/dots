### WM INDEPENDENT ###
# Terminal.
super + Return
	alacritty

# Rofi (drun, run, powermenu).
super + d ; {d,shift + d,x}
	rofi -show {drun -show-icons -theme dmenu,run -theme dmenu,p -modi p:powermenu -theme dmenu}

# Window list (using Rofi).
alt + Tab
	rofi -show window -show-icons

# Browser.
super + b
	microsoft-edge-stable

# File manager.
super + {e,shift + e}
	{thunar, alacritty -e ranger}

# Audio mixer.
super + {p,shift + p}
	{alacritty -e pulsemixer, pavucontrol}

# Clipboard.
super + v
	xfce4-popup-clipman

# Screenshot (region).
ctrl + Print
	flameshot gui

# Screenshot (full).
Print
	flameshot full

# Text editor.
super + shift + v
	code

# OBS.
super + o
	flatpak run com.obsproject.Studio

# Lock the screen.
ctrl + alt + shift + l
	screenlock

# Emoji.
super + semicolon
	emote

# Task Manager.
ctrl + shift + {Escape,alt + Escape}
	{alacritty -e bashtop, alacritty -e nvtop}

# Music player (ncmpcpp).
super + shift + m
	mpc update; alacritty -e ncmpcpp

# Reload keyboard layout.
super + shift + Escape
	setxkbmap -model pc104 -layout lv,ru -variant ,phonetic_mac -option grp:shifts_toggle	

# Reload sxhkd.
super + Escape
	pkill -USR1 -x sxhkd


### AUDIO ###
## Main audio.
# Increase/decrease volume (for headphones).
XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-2%,+2%}

# Mute audio.
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

## Music player.
# Increase/decrease volume.
alt + {Up,Down}
	mpc volume {+5,-5}

# Next/prev song.
XF86Audio{Next,Prev}
	mpc {next, prev}

# Pause the song.
XF86AudioPlay
	mpc toggle

# Stop the song.
XF86AudioStop
	mpc stop


### BSPWM ###
# Restart bspwm.
super + shift + r
	bspc wm -r

# Exit out of bspwm.
ctrl + alt + shift + x
	bspc quit

# Close the window.
super + shift + c
	bspc node -c

# Toggle monocle layout.
super + m
	bspc desktop -l next

# Focus next/prev monitor.
super + {comma,period}
	bspc monitor -f {west, east}

# Move window to next/prev monitor
super + shift + {comma,period}
	bspc node -m {next, prev}

### STATE/FLAGS ###
# Set the layout/state.
super + {t,shift + f,f}
	bspc node -t {tiled, floating, fullscreen}

### FOCUS/SWAP ###
# Focus/send to workspaces.
super + {_,shift + }{1-9,0,minus,equal}
	bspc {desktop -f, node -d} '^{1-9,10,11,12}'


### MINIMIZE ###
# Minimize window.
super + n
	bspc node -g hidden

# Unminimize window.
super + shift + n
	bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off


### WINDOW MOVEMENT ###
# Resize window (looks like shit I know).
super + ctrl + {h,j,k,l}
	{bspc node @parent/second -z left -50 0; \
	bspc node @parent/first -z right -50 0, \
	bspc node @parent/second -z top 0 +50; \
	bspc node @parent/first -z bottom 0 +50, \
	bspc node @parent/first -z bottom 0 -50; \
	bspc node @parent/second -z top 0 -50, \
	bspc node @parent/first -z right +50 0; \
	bspc node @parent/second -z left +50 0}

# Focus/move the window.
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west, south, north, east}

## Rotate nodes.
# Clockwise.
ctrl + super + r
	bspc node @focused:/ -R 90
# Counter-clockwise.
ctrl + super + alt + r
	bspc node @focused:/ -R -90
