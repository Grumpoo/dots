### WM INDEPENDENT ###
# Terminal.
super + Return
	kitty

# Rofi (drun, run, powermenu).
super + d ; {d,shift + d,x}
	rofi -show {drun,run,p -modi p:powermenu -lines 0}

# File manager.
super + e
	  thunar

# Audio mixer.
super + {p,shift + p}
	  {kitty -e pulsemixer,pavucontrol}

# Clipboard.
super + v
	  xfce4-popup-clipman

# Screenshot.
ctrl + Print
	 flameshot gui

# GVIm.
super + shift + v
	gvim

# Lock the screen.
ctrl + alt + shift + l
	 screenlock

# Emoji.
super + semicolon
	emote

# Music player (ncmpcpp).
super + shift + m
	kitty -e ncmpcpp

# Reload sxhkd.
super + Escape
	pkill -USR1 -x sxhkd


### AUDIO ###
## Main audio.
# Increase/decrease volume.
XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-5%,+5%}

# Mute audio.
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

## Music player.
# Increase/decrease volume.
alt + {Up,Down}
	mpc volume {+5,-5}

# Next/prev song.
XF86Audio{Next,Prev}
	mpc {next,prev}

# Pause the song.
XF86AudioPlay
  mpc toggle


### BSPWM ###
# Restart bspwm.
super + shift + r
	bspc wm -r

# Exit out of bspwm.
ctrl + alt + shift + x
	bspc quit

# Close the window.
super + shift + c
	bspc node -c

# Toggle monocle layout.
super + m
	bspc desktop -l next

# Send the newest marked node to the newest preselected node.
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# Swap the current node and the biggest window.
super + g
	bspc node -s biggest.window

# Focus next/prev monitor.
super + {comma,period}
	bspc monitor -f {west,east}


### STATE/FLAGS ###
# Set the layout/state.
super + {t,shift + f,f}
	bspc node -t {tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


### FOCUS/SWAP ###
# Focus the next/previous desktop in the current monitor.
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# Focus the last node/desktop.
super + {grave,Tab}
	bspc {node,desktop} -f last

# Focus the older or newer node in the focus history.
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus/send to workspaces.
super + {_,shift + }{1-9,0}
	  bspc {desktop -f,node -d} '^{1-9,10}'


### MINIMIZE ###
# Hide window.
super + n
  bspc node -g hidden

# Unhide window.
super + shift + n
  bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off


### MOVE/RESIZE ###
# Resize window (looks like shit I know).
super + ctrl + {h,shift + h,j,shift + j,k,shift + k,l,shift + l}
	bspc node -z {left -50 0,right -50 0,bottom 0 50,top 0 50,top 0 -50,bottom 0 -50,right 50 0,left 50 0}

# Focus/move the window.
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

