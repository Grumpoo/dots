### WM INDEPENDENT ###
# Terminal.
super + Return
	alacritty

# Rofi (drun, run, powermenu).
super + d ; {d,shift + d,x}
	rofi -show {drun -show-icons,run,p -modi p:powermenu -lines 0}

# Window list (using Rofi).
alt + Tab
	rofi -show window -show-icons

super + b
	microsoft-edge-stable

# File manager.
super + {e, shift + e}
	  {thunar, alacritty -e ranger}

# Audio mixer.
super + {p,shift + p}
	  {alacritty -e pulsemixer,pavucontrol}

# Clipboard.
super + v
	  xfce4-popup-clipman

# Screenshot.
ctrl + Print
	 flameshot gui

# Text editor.
super + shift + v
	code

# Lock the screen.
ctrl + alt + shift + l
	 screenlock

# Emoji.
super + semicolon
	emote

# Task Manager.
ctrl + shift + {Escape, alt + Escape}
	{alacritty -e bashtop, alacritty -e nvtop}

# Music player (ncmpcpp).
super + shift + m
	alacritty -e ncmpcpp

# Reload sxhkd.
super + Escape
	pkill -USR1 -x sxhkd


### AUDIO ###
## Main audio.
# Increase/decrease volume.
XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-5%,+5%}

# Mute audio.
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

## Music player.
# Increase/decrease volume.
alt + {Up,Down}
	mpc volume {+5,-5}

# Next/prev song.
XF86Audio{Next,Prev}
	mpc {next,prev}

# Pause the song.
XF86AudioPlay
	mpc toggle


### BSPWM ###
# Restart bspwm.
super + shift + r
	bspc wm -r

# Exit out of bspwm.
ctrl + alt + shift + x
	bspc quit

# Close the window.
super + shift + c
	bspc node -c

# Toggle monocle layout.
super + m
	bspc desktop -l next

# Send the newest marked node to the newest preselected node.
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# Swap the current node and the biggest window.
super + g
	bspc node -s biggest.window

# Focus next/prev monitor.
super + {comma,period}
	bspc monitor -f {west,east}

# Move window to next/prev monitor
super + shift + {comma,period}
	bspc node -m {next,prev}

### STATE/FLAGS ###
# Set the layout/state.
super + {t,shift + f,f}
	bspc node -t {tiled,floating,fullscreen}

# set the node flags
ctrl + super + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


### FOCUS/SWAP ###
# Focus the next/previous desktop in the current monitor.
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# Focus the last node/desktop.
super + {grave,Tab}
	bspc {node,desktop} -f last

# Focus the older or newer node in the focus history.
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus/send to workspaces.
super + {_,shift + }{1-9,0,minus,equal}
	  bspc {desktop -f,node -d} '^{1-9,10,11,12}'


### MINIMIZE ###
# Hide window.
super + n
	bspc node -g hidden

# Unhide window.
super + shift + n
	bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off


### MOVE/RESIZE ###
# Resize window (looks like shit I know).
super + ctrl + {h,j,k,l}
    {bspc node @parent/second -z left -50 0; \
    bspc node @parent/first -z right -50 0, \
    bspc node @parent/second -z top 0 +50; \
    bspc node @parent/first -z bottom 0 +50, \
    bspc node @parent/first -z bottom 0 -50; \
    bspc node @parent/second -z top 0 -50, \
    bspc node @parent/first -z right +50 0; \
    bspc node @parent/second -z left +50 0}

# Focus/move the window.
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

